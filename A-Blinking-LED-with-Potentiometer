int led =13;
int buttonPin = 2;
int buttonState = 0;
int lightState = 0;



void setup(){
  pinMode(led,OUTPUT);
  pinMode(buttonPin, INPUT);
  Serial.begin(9600);

  
}

void loop(){
  buttonState = digitalRead(buttonPin);
  lightState = digitalRead(led);
  if(lightState == LOW)
  {
    if(buttonState ==HIGH){
      digitalWrite(led,HIGH);
      delay(500);
      digitalWrite(led,LOW);
      delay(500);
    }
   
    
  }else
   {
    if(buttonState ==LOW){
      digitalWrite(led,LOW);
      delay(500);

   }
   }
}
